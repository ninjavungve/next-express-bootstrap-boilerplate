{
  "extends": "airbnb",
  "settings": {
    "import/core-modules": ["styled-jsx/css"]
  },
  "rules": {
    "arrow-parens": "off",
    "global-require": "off",
    "indent": ["error", 4],
    "no-console": "off",
    "comma-dangle": "off",
    "no-underscore-dangle": "off",
    "func-names": "off",
    "no-use-before-define": "off",
    "react/jsx-indent": ["error", 4],
    "react/jsx-indent-props": ["error", 4],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react/react-in-jsx-scope": "off",
    "react/no-danger": "off"
  }
}
